mkdir -p /opt/openpose_cpu/build && \
    cd /opt/openpose_cpu/ && \
    cd build && \
        cmake \
        -DGPU_MODE=CPU_ONLY \
        -DBUILD_PYTHON=ON \
	-DDOWNLOAD_BODY_25_MODEL=OFF \
	-DDOWNLOAD_FACE_MODEL=OFF \
	-DDOWNLOAD_HAND_MODEL=OFF \
        .. && \
        make -j`nproc` && \
        rm -rf /opt/openpose_cpu/3rdparty
